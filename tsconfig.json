{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2019",
    "noEmit": true,
    "lib": ["es6", "es2017", "es2019", "dom", "esnext.asynciterable"],
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUnusedLocals": true
  },
  "paths": {
    "#/*": ["src/*"],
  },
  "include": ["src", "./jestSetup.ts", "testUtils/renderStyledComponent.tsx", "testUtils/waitOneTick.tsx"],
  "exclude": ["node_modules", "build", "scripts", "acceptance-tests", "webpack", "jest"]
}
